<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="customer">
        <field name="sendemail_store_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="string">200</item>
                </item>
            </argument>
        </field>
        <fieldset name="password_section" class="Lof\CustomerPassword\Ui\Component\Form\Fieldset\PasswordSection">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Password Management</item>
                    <item name="sortOrder" xsi:type="string">300</item>
                </item>
            </argument>
            <field name="password">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">customer</item>
                        <item name="label" xsi:type="string" translate="true">Change Password</item>
                        <item name="formElement" xsi:type="string">input</item>
                        <item name="elementTmpl" xsi:type="string">Lof_CustomerPassword/form/element/password</item>
                        <item name="component" xsi:type="string">Lof_CustomerPassword/js/form/element/admin-password</item>
                        <item name="dataType" xsi:type="string">text</item>
                    </item>
                </argument>
            </field>
            <field name="admin_password">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">customer</item>
                        <item name="label" xsi:type="string" translate="true">Current Admin Password</item>
                        <item name="formElement" xsi:type="string">input</item>
                        <item name="elementTmpl" xsi:type="string">Lof_CustomerPassword/form/element/password</item>
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="validation" xsi:type="array">
                            <item name="required-entry" xsi:type="boolean">true</item>
                        </item>
                    </item>
                </argument>
            </field>
        </fieldset>
    </fieldset>
</form>
